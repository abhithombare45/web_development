.container {
  display: flex;
  justify-content: space-between;
  align-items: center;
  background-color: yellow;
  max-width: 90%;
  margin: auto;

}

.logo {
  color: maroon;
  font-size: 22px;
  font-weight: bold;
  padding: 7px 200px;
}

.nav-links {
  display: flex;
  gap: 20px;
}

.nav-links li a {
  color: #fff;
  font-size: 16px;
  transition: color 0.3s ease;
}

.nav-links li a:hover {
  color: #00bcd4;
}

/* Hero Section */

section.hero {
  width: 2000px;
  height: 90vh;
  background-image: url("./assets/images/cover45.jpeg");
  background-size: cover;
  background-repeat: no-repeat;
  background-position-x: 65%;
  background-position-y: 50%;
  background-color: black;
  /* display: block; */

}


.hero {
  position: relative;
  /* Essential for positioning the video correctly */
  width: 100%;
  height: 100vh;
  /* Use viewport height for full height */
  overflow: hidden;
  /* Ensures the video doesn't overflow its container */
  /*  You can keep this as a fallback if the video fails to load,
      or for browsers that don't support video backgrounds */
  /* background: linear-gradient(to right, #0f2027, #203a43, #2c5364); */
  background: black;
}

.hero-video {
  position: absolute;
  /* Positions the video relative to the .hero container */
  top: 50%;
  left: 50%;
  transform: translate(-50%, -50%);
  /* Centers the video horizontally and vertically */
  min-width: 100%;
  /* Ensures the video covers the entire width */
  min-height: 100%;
  /* Ensures the video covers the entire height */
  object-fit: cover;
  /* Ensures the video fills the container while maintaining its aspect ratio */
  z-index: -1;
  /* Puts the video behind the hero-content */
}

.hero-content {
  position: relative;
  /* Allows positioning of content on top of the video */
  z-index: 1;
  /* Ensures the content appears above the video */
  display: flex;
  /* Use flexbox to center the content */
  flex-direction: column;
  /* Stack the content vertically */
  justify-content: center;
  /* Center content vertically */
  align-items: center;
  /* Center content horizontally */
  text-align: center;
  color: #fff;
  padding: 0 20px;
  height: 100%;
  /* Ensure content takes full height of the hero section */
}


